<?xml version="1.0" encoding="utf-8"?>
<!--Custom report-->
<odoo>
<template id="report_request_document">
            <div class="header">
                <img class="img img-responsive" src="/philsteel/static/src/img/logo-philsteel.png" height="50px" width="100px" align="left" /><center><div><h3><b>Philmetal Products, Inc.</b></h3>
                <h5>Philsteel Tower, 140 Amorsolo St., Legaspi Village, Makati City</h5></div></center>

            </div>
            <div class="page">
                <center><h4><b><u>REQUEST FOR ACTUAL MEASUREMENT</u></b></h4></center>
                <table class="table table-borderless">
                    
                    <t t-foreach="docs" t-as="doc">
                    <tr class="table table-borderless">
                        <td><b> Request No : </b><span t-esc="doc.request_number"/></td>
                        <td><b> Customer Name : </b><span t-esc="doc.customer"/></td>      
                    </tr> 
                    <tr class="table table-borderless">
                        <td><b> Address : </b><span t-esc="doc.location"/></td>  
                        <td></td> 
                    </tr>  
                    <tr class="table table-borderless">
                        <td><b> Project Name : </b><span t-esc="doc.name.name"/></td>  
                        <td></td> 
                    </tr> 
                    <tr class="table table-borderless">
                        <td><b> Complete Project Site Address : </b><span t-esc="doc.project_site_address"/></td>
                        <td></td> 
                    </tr>
                    <tr class="table table-borderless">
                        <td><b> Name of Contractor : </b><span t-esc="doc.general_contractor"/></td> 
                        <td><b> Job Site Telephone or Mobile Number : </b><span t-esc="doc.jobsite_contact_number"/></td>  
                    </tr>
                    <tr class="table table-borderless">
                        <td><b> Date when structure ready for measurement </b><span t-esc="doc.ready_for_measurement_date"/></td>
                        <td></td> 
                    </tr>
                    </t>     
                </table>
                    
                    <h5><b><u>References</u></b></h5>
                    <table class="table table-condensed"  style="font-size:12px;">
                    
                        <t t-foreach="docs" t-as="doc">
                            <tr>
                                <td><b> SC NO : </b><span t-esc="doc.sc_number"/></td>
                                <td><b> IC NO : </b><span t-esc="doc.ic_number"/></td>      
                            </tr> 
                            <tr>
                                <td><b> SQ NO : </b><span t-esc="doc.sq_number"/></td>
                                <td><b> IQ NO : </b><span t-esc="doc.iq_number"/></td>      
                            </tr> 
                    
                        </t>     
                    </table>


                    <h5><b><u>Frame status as of filing date</u></b></h5><br />
                    <table class="table table-condensed" style="font-size:12px">
                    
                        <t t-foreach="docs" t-as="doc">
                            <tr>
                                <td><b> % Frames / Trusses Installed </b><span t-esc="doc.frames_trusses_installed"/></td>
                                <td><b> % Purlins Installed </b><span t-esc="doc.purlins_installed"/></td>      
                            </tr> 
                            <tr>
                                <td><b> % Sagrod Installed </b><span t-esc="doc.sogrod_installed"/></td>
                                <td><b> % Beam Installed </b><span t-esc="doc.beam_installed"/></td>      
                            </tr> 
                            <tr>
                                <td><b> % No. of Floors Available for Measurement </b><span t-esc="doc.floors_available_for_measurement"/></td>
                                <td></td>   
                            </tr> 
                    
                        </t>     
                    </table>

                    <h5><b><u>Request for Measurement</u></b></h5><br />
                    <table class="table table-condensed" style="font-size:12px">
                    
                        <t t-foreach="docs" t-as="doc">
                            <tr>
                                <td><b> Quotation </b><span t-esc="doc.rfm_quotation"/></td>
                                <td><b> Contract </b><span t-esc="doc.rfm_contract"/></td>      
                            </tr> 
                            <tr>
                                <td><b> Fabrication </b><span t-esc="doc.rfm_fabrication"/></td>
                                <td><b> Tech 1 Assistance </b><span t-esc="doc.rfm_tech1assistance"/></td>      
                            </tr> 
                            <tr>
                                <td><b> Others </b><span t-esc="doc.rfm_others"/></td> 
                                <td></td>        
                            </tr> 
                    
                        </t>     
                    </table>
                    <h5><b><u>Contact Person at Jobsite</u></b></h5><br />
                    <table class="table table-condensed" style="font-size:12px">
                    <tr>
                        <th> Name </th>
                        <th> Position </th>
                    </tr>
                    <t t-foreach="docs" t-as="doc">
                    <tr>
                        <td><t t-esc="doc.contact_person_at_site.name"/></td>
                        <td><t t-esc="doc.contact_person_at_site.designation.name"/></td>   
                               
                    </tr>  
                    </t>     
                </table>
                
                <h5><b><u>Product Profile</u></b></h5><br />
                <table class="table table-condensed" style="font-size:12px">
                    <tr>
                        <th> Material </th>
                        <th> Quantity </th>
                    </tr>
                    <t t-foreach="docs" t-as="doc">
                    <tr>
                        <td><t t-esc="doc.product_profile.name.name"/></td>
                        <td><t t-esc="doc.product_profile.quantity_installed"/></td>   
                               
                    </tr>  
                    </t>     
                </table>
                <table  class="table table-bordered" style="font-size:12px">
                    
                    <t t-foreach="docs" t-as="doc">
                    <tr>
                        <td><b> Accomplished By</b><span t-esc="doc.accomplished_by.name"/></td>
                        <td><b> Approved By </b><span t-esc="doc.approved_by.name"/></td>
                    </tr> 
                    <tr>
                        <td><b> Date Filed </b><span t-esc="doc.date_filed"/></td>
                        <td></td>
                    </tr> 
                    </t>     
                </table>
            </div>
</template>
</odoo>